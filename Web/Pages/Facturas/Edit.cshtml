@page
@model Web.Pages.Facturas.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Factura</h1>

<h4>Factura Details</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <!-- Afișare detalii client și vehicul -->
        <h5>Client: @Model.ClientName</h5>
        <h5>Vehicul: @Model.VehicleDetails</h5>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Factura.ID_Factura" />

            <!-- Dropdown pentru Status_Plata -->
            <div class="form-group">
                <label asp-for="Factura.Status_Plata" class="control-label">Status</label>
                <select asp-for="Factura.Status_Plata" class="form-control">
                    <option value="Neachitat" selected>Neachitat</option>
                    <option value="Achitat">Achitat</option>
                </select>
                <span asp-validation-for="Factura.Status_Plata" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
