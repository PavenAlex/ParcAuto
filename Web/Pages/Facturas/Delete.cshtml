@page
@model Web.Pages.Facturas.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div class="text-danger">
    <!-- Afișează toate mesajele de eroare din ModelState -->
    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <p>@error.ErrorMessage</p>
    }
</div>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Factura</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <strong>Detalii</strong>
        </dt>
        <dd class="col-sm-10">
            @Model.Factura.ClientVehicul
        </dd>
        <dt class="col-sm-2">
            <strong>Data Emitere</strong>
        </dt>
        <dd class="col-sm-10">
            @Model.Factura.Data_Emitere
        </dd>
        <dt class="col-sm-2">
            <strong>Suma</strong>
        </dt>
        <dd class="col-sm-10">
            @Model.Factura.Suma_Totala
        </dd>
        <dt class="col-sm-2">
            <strong>Status</strong>
        </dt>
        <dd class="col-sm-10">
            @Model.Factura.Status_Plata
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Factura.ID_Factura" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
