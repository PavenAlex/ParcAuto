@page
@model Web.Pages.Rezervares.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>


<div class="text-danger">
    @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
    {
        if (error.ErrorMessage.Contains("factură asociată"))
        {
            <p>@error.ErrorMessage</p>
        }
    }
</div>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Rezervare</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Client
        </dt>
        <dd class="col-sm-10">
            @Model.NumePrenumeClient
        </dd>
        <dt class="col-sm-2">
            Vehicul
        </dt>
        <dd class="col-sm-10">
            @Model.MarcaModelVehicul
        </dd>
        <dt class="col-sm-2">
            Data start
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rezervare.Data_Start)
        </dd>
        <dt class="col-sm-2">
            Data final
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rezervare.Data_Sfarsit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rezervare.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rezervare.Status)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Rezervare.ID_Rezervare" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
