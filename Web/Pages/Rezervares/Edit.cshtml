@page
@model Web.Pages.Rezervares.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rezervare</h4>
<h5>Client: @Model.ClientNume</h5>
<h5>Vehicul: @Model.VehiculNume</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            
            <input type="hidden" asp-for="Rezervare.ID_Rezervare" />
            <input type="hidden" asp-for="Rezervare.ID_Client" />
            <input type="hidden" asp-for="Rezervare.ID_Vehicul" />

            <div class="form-group">
                <label asp-for="Rezervare.Data_Start" class="control-label">Data start</label>
                <input asp-for="Rezervare.Data_Start" class="form-control" />
                <span asp-validation-for="Rezervare.Data_Start" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rezervare.Data_Sfarsit" class="control-label">Data final</label>
                <input asp-for="Rezervare.Data_Sfarsit" class="form-control" />
                <span asp-validation-for="Rezervare.Data_Sfarsit" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rezervare.Status" class="control-label"></label>
                <select asp-for="Rezervare.Status" class="form-control" asp-items="Model.StatusOptions">
                    <option value="">Selectează statusul</option>
                </select>
                <span asp-validation-for="Rezervare.Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
