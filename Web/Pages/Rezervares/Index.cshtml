@page
@model Web.Pages.Rezervares.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Client
            </th>
            <th>
                Vehicul
            </th>
            <th>
                Data start
            </th>
            <th>
                Data final
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rezervare[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Rezervare)
        {
            <tr>
                <td>
                    @(Model.Clients.TryGetValue(item.ID_Client, out var clientName) ? clientName : "Client necunoscut")
                </td>
                <td>
                    @(Model.Vehicles.TryGetValue(item.ID_Vehicul, out var vehicleName) ? vehicleName : "Vehicul necunoscut")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data_Start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data_Sfarsit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID_Rezervare">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID_Rezervare">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
