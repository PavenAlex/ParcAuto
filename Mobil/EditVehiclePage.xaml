<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobil.EditVehiclePage"
             Title="Editează Vehicul">

    <StackLayout Padding="20" Spacing="10">
        <Entry x:Name="MarcaEntry" Placeholder="Marca" />
        <Entry x:Name="ModelEntry" Placeholder="Model" />
        <Entry x:Name="AnFabricatieEntry" Placeholder="An Fabricație" Keyboard="Numeric" />
        <Entry x:Name="TipCombustibilEntry" Placeholder="Tip Combustibil" />
        <Entry x:Name="StareEntry" Placeholder="Stare" />
        <Entry x:Name="KilometrajEntry" Placeholder="Kilometraj" Keyboard="Numeric" />
        <Button Text="Salvează" Clicked="OnSaveButtonClicked" />
    </StackLayout>
</ContentPage>
